{
    "name": "codem/silverstripe-damn-fine-uploader",
    "description": "An HTML5 upload field for Silverstripe 4, including editable form fields for silverstripe/userforms",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "uploader",
        "uploads",
        "uppy",
        "html5",
        "file upload"
    ],
    "homepage": "https://github.com/codem/silverstripe-damn-fine-uploader",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "James Ellis",
            "homepage": "https://github.com/codem/"
        }
    ],
    "require": {
        "php": "^8.1",
        "silverstripe/userforms": "^6",
        "silverstripe/mimevalidator": "^3",
        "symbiote/silverstripe-multivaluefield": "^6"
    },
    "suggest" : {
        "dnadesign/silverstripe-elemental-userforms" : "Provides form content blocks as part of elemental"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3",
        "codeception/codeception": "^4.2",
        "vlucas/phpdotenv" : "^5"
    },
    "extra": {
        "expose": [
            "client/dist/js",
            "client/dist/styles"
        ]
    },
    "autoload": {
        "psr-4": {
            "Codem\\DamnFineUploader\\": [
                "src/Controllers/",
                "src/Exceptions/",
                "src/Extensions/",
                "src/Fields/",
                "src/Models/",
                "src/Pages/",
                "src/Tasks/",
                "src/Traits/"
            ]
        }
    }
}
